<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--full screen app theme-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/black_effective</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/white</item>
        <!-- To change text color of action menu-->
        <item name="actionMenuTextColor">@color/black_effective</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/warm_grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_200sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_200sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_200sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_200sdp</item>

    </style>


    <style name="TextViewStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="fontFamily">@font/cairo_semibold</item>

    </style>

    <style name="TextStyleFlashBar">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

    <style name="progress_bar_theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="fontFamily">@font/cairo_semibold</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress|textCapSentences|textPassword</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">200</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColorHint">@color/translucent_black</item>
        <item name="android:background">@drawable/edt_stroke</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="fontFamily">@font/cairo_semibold</item>
    </style>

    <style name="DialougAnimation">
        <item name="android:windowEnterAnimation">@anim/activity_open_translate</item>
        <item name="android:windowExitAnimation">@anim/activity_close_translate</item>
    </style>

</resources>
